<div class="container justify-content-center" >
  <% if notice %>
    <div class="alert alert-info">
      <%= notice %>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <h1 class="text-center">Orders</h1>
  </div>
  <div class="row justify-content-center">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th scope="col">Email</th>
          <th scope="col">Pay type</th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.name %></td>
            <td><%= order.address %></td>
            <td><%= order.email %></td>
            <td><%= order.pay_type %></td>
            <td><%= link_to raw("<i class=\"fas fa-eye\"></i>"), order, class: "btn btn-info btn-sm" %></td>
            <td><%= link_to raw("<i class=\"fas fa-edit\"></i>"), edit_order_path(order), class: "btn btn-warning btn-sm" %></td>
            <td><%= link_to raw("<i class=\"fas fa-trash-alt\"></i>"), order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


