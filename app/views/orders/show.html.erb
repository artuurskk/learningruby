<div class="container" >
  <% if notice %>
    <div class="alert alert-info">
      <%= notice %>
    </div>
  <% end %>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>

<%= link_to 'Edit', edit_order_path(@order),class: 'btn btn-success' %>
<%= link_to 'Back', orders_path, class: 'btn btn-danger'%>
</div>