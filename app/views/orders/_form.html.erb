
<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>

      <div class="alert alert-danger">
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>

  <% end %>

  <div class="form-group">
    <%= form.label :name, t('.name') %>
    <%= form.text_field :name, id: :order_name, size: 40,  class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :address, t('.address_html') %>
    <%= form.text_area :address, id: :order_address, rows: 3,  class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :email, t('.email') %>
    <%= form.email_field :email, id: :order_email, size: 40,  class:"form-control" %>
  </div>
  <div class="form-group">
    <div id='pay-type-component'></div>
  </div>

  <div class="form-group">
    <%= form.submit(class:'btn btn-success') %>
    <%= link_to 'Back', products_path, class: 'btn btn-danger' %>
  </div>

<% end %>
</div>