<div class="container justify-content-center" >
  <% if notice %>
    <div class="alert alert-info">
      <%= notice %>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <h1 class="text-center">Users</h1>
  </div>
  <div class="row justify-content-center">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to raw("<i class=\"fas fa-eye\"></i>"), user, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to raw("<i class=\"fas fa-edit\"></i>"), edit_user_path(user), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to raw("<i class=\"fas fa-trash-alt\"></i>"), user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <%= link_to raw("<i class=\"fas fa-plus\"></i> New User"), new_user_path, class: "btn btn-primary" %>
  </div>
</div>