
  <h5>
    <%= @product.title %>
  </h5>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= @product.image_url %>
  </p>

  <% if @product.category %>
  <p>
    <strong>Category:</strong>
    <%= @product.category.name %>
  </p>
  <% end %>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-success' %>
  <%= link_to 'Back', products_path, class: 'btn btn-danger' %>


