<!DOCTYPE html>
<html>
<head>

  <title>PC Shop</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all',
                          'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application',
                             'data-turbolinks-track': 'reload' %>
  <script type="text/javascript">
      I18n.defaultLocale = "<%= I18n.default_locale %>";
      I18n.locale = "<%= I18n.locale %>";
  </script>
</head>
<body>
<header class="main">
  <aside>
    <%= form_tag store_index_path, class: 'locale' do %>
      <%= select_tag 'set_locale',
                     options_for_select(LANGUAGES, I18n.locale.to_s),
                     onchange: 'this.form.submit()' %>
      <%= submit_tag 'submit', id: "submit_locale_change" %>
    <% end %>
  </aside>
  <%= image_tag 'logo.png', width:170, height:130 %>
  <h1><%= @page_title %></h1>
</header>
<section class="content">
  <nav class="side_nav left">
    <ul>
      <li><a href="/"><%= t('.home') %></a></li>
      <li><a href="/about-us"><%= t('.about-us') %></a></li>
      <li><a href="/contact"><%= t('.contact') %></a></li>
      <li><a href="/login"><%= t('.login') %></a></li>
    </ul>
  </nav>
  <main class='<%= controller.controller_name %>'>
    <%= yield %>
  </main>
  <nav class="side_nav right">

    <% if session[:user_id] %>
      <nav class="logged_in_nav">
        <ul>
          <li><%= link_to t('.orders') , orders_path %></li>
          <li><%= link_to t('.products'), products_path %></li>
          <li><%= link_to t('.users'), users_path %></li>
          <li><%= button_to t('.logout'), logout_path(locale: I18n.locale), method: :delete %></li>
        </ul>
      </nav>
    <% end %>
    <br>
    <% if @cart %>

      <div id="cart" class="carts">
        <%= render_if @cart && @cart.line_items.any?, @cart %>
      </div>
    <% end %>

  </nav>

</section>
<footer>
    <p>
      PC Shop @ 2019
    </p>
</footer>
</body>
</html>