<div class="container" >
  <% if notice %>
    <div class="alert alert-info">
      <%= notice %>
    </div>
  <% end %>
  <div class="row text-center">
    <div class="col-12">
      <h1>Hi, <%= @user.name %>!</h1>
      <p>
        We have <%= pluralize(@total_orders, "order") %>.
      </p>
      <%= link_to t('.orders') , orders_path, class:'btn btn-primary' %>
    </div>
  </div>

</div>