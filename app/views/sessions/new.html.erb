<section class="depot_form " >

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <div class="container d-flex align-items-center justify-content-center" >

    <%= form_tag do %>
      <h2>Please Log In</h2>
      <div class="form-group">
        <%= label_tag :name, 'Name:' %>
        <%= text_field_tag :name, params[:name], size: 40,  class:"form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password, 'Password:' %>
        <%= password_field_tag :password, params[:password], size: 40,  class:"form-control" %>
      </div>
      <div class="form-group">
        <div class="actions">
          <%= submit_tag "Login", class:"form-control" %>
        </div>
      </div>

    <% end %>
  </div>
</section>